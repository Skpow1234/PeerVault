{
  "name": "@peervault/grpc-client",
  "version": "1.0.0",
  "description": "PeerVault gRPC-Web TypeScript client",
  "main": "dist/client.js",
  "types": "dist/client.d.ts",
  "scripts": {
    "build": "npm run generate && npm run compile",
    "generate": "protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --ts_out=./generated --js_out=import_style=commonjs,binary:./generated --grpc-web_out=import_style=typescript,mode=grpcwebtext:./generated ../../../proto/peervault.proto",
    "compile": "tsc",
    "clean": "rm -rf dist generated",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@improbable-eng/grpc-web": "^0.15.0",
    "google-protobuf": "^3.21.2"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.15.6",
    "protoc-gen-ts": "^0.8.6",
    "typescript": "^4.9.5"
  },
  "keywords": [
    "grpc",
    "grpc-web",
    "typescript",
    "peervault",
    "p2p",
    "storage"
  ],
  "author": "PeerVault Team",
  "license": "MIT",
  "files": [
    "dist/",
    "generated/",
    "README.md"
  ]
}
